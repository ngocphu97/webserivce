{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/env": [
        "src/environments/environment"
      ],
      "@app/core": [
        "src/app/core/index"
      ],
      "@app/core/*": [
        "src/app/core/*"
      ],
      "@app/auth": [
        "src/app/auth/index"
      ],
      "@app/auth/*": [
        "src/app/auth/*"
      ],
      "@app/layout": [
        "src/app/layout/index"
      ],
      "@app/shared/*": [
        "src/app/shared/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
